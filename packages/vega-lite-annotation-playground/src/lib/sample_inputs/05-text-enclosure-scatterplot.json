{
    "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
    "description": "A scatterplot showing body mass and flipper lengths of penguins.",
    "name": "Scatterplot",
    "data": {
        "url": "data/penguins.json"
    },
    "mark": "point",
    "encoding": {
        "x": {
            "field": "Flipper Length (mm)",
            "type": "quantitative",
            "scale": {
                "zero": false
            }
        },
        "y": {
            "field": "Body Mass (g)",
            "type": "quantitative",
            "scale": {
                "zero": false
            }
        },
        "color": {
            "field": "Species",
            "type": "nominal"
        },
        "shape": {
            "field": "Species",
            "type": "nominal"
        }
    },
    "annotations": [
        {
            "target": {
                "type": "pixel-space",
                "x": 70,
                "y": 40
            },
            "text": {
                "text": "Pixel Space",
                "position": "upperLeft",
                "dy": -3
            },
            "enclosure": {
                "shape": {
                    "type": "rect",
                    "width": 60,
                    "height": 30
                }
            }
        },
        {
            "target": {
                "type": "data-index",
                "indices": [
                    28,
                    38
                ]
            },
            "text": {
                "text": "Indices",
                "position": "middleLeft",
                "dx": -7,
                "dy": -4,
                "style": {
                    "angle": -90
                }
            },
            "enclosure": {}
        },
        {
            "target": {
                "type": "data-expr",
                "expr": "datum.Species === 'Gentoo' && datum['Beak Length (mm)'] >= 55"
            },
            "text": {
                "text": "Expr",
                "position": "upperMiddle",
                "dy": -3
            },
            "enclosure": {}
        }
    ]
}